<div class="float-right">
    <div class="btn-group">
        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-plus fa-fw" id="test-smtp-icon"></i> Create new
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item" href="{{newLink}}?provider=gmail">Gmail</a>
            <a class="dropdown-item" href="{{newLink}}?provider=gmailService">Gmail Service Accounts</a>
            <a class="dropdown-item" href="{{newLink}}?provider=outlook">Outlook</a>
            <a class="dropdown-item" href="{{newLink}}?provider=mailRu">Mail.ru</a>
        </div>
    </div>
</div>

{{> oauth_config_header}}

{{#if apps}}
<div class="card mt-4 mb-4">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="">
                <tr>
                    <th class="p-0">
                        <div class="p-2">Name</div>
                    </th>
                    <th class="p-0">
                        <div class="p-2">Description</div>
                    </th>
                    <th class="p-0">
                        <div class="p-2">Type</div>
                    </th>
                    <th class="p-0">
                        <div class="p-2">Base scopes</div>
                    </th>
                    <th class="p-0">
                        <div class="p-2">Provider ID <a href="#" tabindex="-1" role="button" data-toggle="popover"
                                data-trigger="hover" data-title="Provider ID"
                                data-content="Use this value as the &quot;oauth2.provider&quot; property, when registering email accounts using the API."><i
                                    class="fas fa-question-circle"></i></a></div>
                    </th>
                    <th class="p-0">
                        <div class="p-2">Status</div>
                    </th>
                </tr>
            </thead>

            <tbody>
                {{#each apps}}
                <tr>
                    <td class="p-0">
                        <div class="position-relative p-2">
                            <a href="/admin/config/oauth/app/{{id}}"
                                class="stretched-link"></a><strong>{{name}}</strong>
                        </div>
                    </td>

                    <td class="p-0">
                        <div class="position-relative p-2">
                            <a href="/admin/config/oauth/app/{{id}}" class="stretched-link"></a>{{description}}
                        </div>
                    </td>

                    <td class="p-0">
                        <div class="position-relative p-2">
                            <a href="/admin/config/oauth/app/{{id}}" class="stretched-link"></a>{{providerData.comment}}
                        </div>
                    </td>

                    <td class="p-0">
                        <div class="position-relative p-2">
                            <a href="/admin/config/oauth/app/{{id}}" class="stretched-link"></a>{{baseScopesText}}
                        </div>
                    </td>

                    <td class="p-0">
                        <div class="position-relative p-2">
                            <a href="/admin/config/oauth/app/{{id}}" class="stretched-link"></a>
                            {{id}}
                        </div>
                    </td>

                    <td class="p-0">
                        <div class="position-relative p-2">
                            <a href="/admin/config/oauth/app/{{id}}" class="stretched-link"></a>
                            {{#if enabled}}

                            {{#if meta.authFlag}}
                            <span class="badge badge-danger">Failing</span>
                            {{else}}
                            <span class="badge badge-success">Enabled</span>
                            {{/if}}
                            {{else}}
                            <span class="badge badge-warning">Disabled</span>
                            {{/if}}
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{#if showPaging}}
    <div class="card-footer">

        <nav aria-label="Page navigation">
            <ul class="pagination" style="flex-wrap: wrap;">

                {{#if prevPage}}
                <li class="page-item"><a class="page-link" href="{{prevPage}}">Previous</a></li>
                {{else}}
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                {{/if}}

                {{#each pageLinks}}
                <li class="page-item {{#if active}}active{{/if}}"><a class="page-link" href="{{url}}">{{title}}</a>
                </li>
                {{/each}}

                {{#if nextPage}}
                <li class="page-item"><a class="page-link" href="{{nextPage}}">Next</a></li>
                {{else}}
                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
                {{/if}}

            </ul>
        </nav>
    </div>
    {{/if}}
</div>
{{else}}
<div class="list-group mt-4 mb-4">
    <div class="list-group-item">
        <p>
            {{#if firstPage}}
            No OAuth2 apps have been registered yet.
            {{else}}
            Nothing to show here.
            {{/if}}
        </p>
    </div>
</div>
{{/if}}

<script>
    document.addEventListener('DOMContentLoaded', () => {
        $('.tooltip-btn').tooltip();
        $('.tooltip-btn').click(function () { this.tooltip('hide') });
    })
</script>