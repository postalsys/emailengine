{
    "name": "imapapi",
    "version": "1.3.0",
    "description": "Email Sync Engine",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "test": "grunt",
        "licenses": "npm-license-crawler --production --csv ./licenses.csv",
        "build": "pkg --out-path dist/ package.json --options max_old_space_size=4096"
    },
    "keywords": [
        "IMAP"
    ],
    "author": "Andris Reinman",
    "license": "AGPL-3.0-or-later",
    "bin": {
        "imapapi": "./bin/imapapi.js"
    },
    "dependencies": {
        "@hapi/boom": "9.1.0",
        "@hapi/hapi": "19.1.1",
        "@hapi/inert": "6.0.1",
        "@hapi/joi": "17.1.1",
        "@hapi/vision": "6.0.0",
        "bull": "3.14.0",
        "dotenv": "8.2.0",
        "email-reply-parser": "1.2.2",
        "exponential-backoff": "3.0.0",
        "hapi-pino": "8.0.1",
        "hapi-swagger": "13.0.2",
        "he": "1.2.0",
        "html-to-text": "5.1.1",
        "imapflow": "1.0.47",
        "ioredis": "4.17.1",
        "jquery": "3.5.1",
        "libmime": "4.2.1",
        "linkifyjs": "2.1.9",
        "msgpack5": "4.2.1",
        "node-fetch": "2.6.0",
        "nodemailer": "6.4.8",
        "pino": "6.3.0",
        "prom-client": "12.0.0",
        "wild-config": "1.5.1"
    },
    "devDependencies": {
        "eslint": "7.1.0",
        "eslint-config-nodemailer": "1.2.0",
        "eslint-config-prettier": "6.11.0",
        "grunt": "1.1.0",
        "grunt-cli": "1.3.2",
        "grunt-eslint": "23.0.0",
        "npm-license-crawler": "0.2.1",
        "pkg": "4.4.8"
    },
    "pkg": {
        "scripts": "workers/**/*.js",
        "assets": [
            "node_modules/@hapi/teamwork/lib/index.js",
            "views/**/*",
            "static/**/*"
        ]
    }
}
