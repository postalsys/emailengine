{
    "name": "emailengine-app",
    "version": "2.0.0",
    "private": true,
    "description": "Email Sync Engine",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "node server --dbs.redis='redis://127.0.0.1/9' | pino-pretty",
        "test": "grunt",
        "swagger": "./getswagger.sh",
        "build-dist": "npm run licenses && npm run licenses-text && pkg package.json",
        "licenses": "license-report --only=prod --output=html --config license-report-config.json > static/licenses.html",
        "licenses-text": "license-report --only=prod --output=table --config license-report-config.json > licenses.txt"
    },
    "keywords": [
        "IMAP"
    ],
    "author": "Postal Systems OU",
    "license": "AGPL-3.0-or-later",
    "bin": {
        "emailengine": "bin/emailengine.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/postalsys/emailengine.git"
    },
    "bugs": {
        "url": "https://github.com/postalsys/emailengine/issues"
    },
    "homepage": "https://emailengine.app/",
    "dependencies": {
        "@hapi/boom": "9.1.4",
        "@hapi/cookie": "11.0.2",
        "@hapi/crumb": "8.0.1",
        "@hapi/hapi": "20.2.1",
        "@hapi/inert": "6.0.4",
        "@hapi/vision": "6.1.0",
        "bull": "4.1.0",
        "bull-arena": "3.29.3",
        "dotenv": "10.0.0",
        "email-reply-parser": "1.2.6",
        "exponential-backoff": "3.1.0",
        "express": "4.17.1",
        "google-auth-library": "7.10.2",
        "handlebars": "4.7.7",
        "hapi-auth-bearer-token": "^8.0.0",
        "hapi-pino": "9.0.0",
        "hapi-swagger": "14.2.4",
        "he": "1.2.0",
        "html-to-text": "8.0.0",
        "imapflow": "1.0.76",
        "ioredis": "4.28.0",
        "joi": "17.4.2",
        "jquery": "3.6.0",
        "libmime": "5.0.0",
        "linkifyjs": "2.1.9",
        "mailparser": "3.4.0",
        "mailsplit": "5.3.1",
        "msgpack5": "5.3.2",
        "node-fetch": "2.6.1",
        "node-vault": "0.9.22",
        "nodemailer": "6.7.0",
        "pino": "7.1.0",
        "prom-client": "14.0.1",
        "punycode": "2.1.1",
        "smtp-server": "3.9.0",
        "uuid": "8.3.2",
        "wild-config": "1.5.1",
        "yargs": "17.2.1"
    },
    "devDependencies": {
        "eslint": "8.1.0",
        "eslint-config-nodemailer": "1.2.0",
        "eslint-config-prettier": "8.3.0",
        "grunt": "1.4.1",
        "grunt-cli": "1.4.3",
        "grunt-eslint": "24.0.0",
        "license-report": "4.5.0",
        "pino-pretty": "^7.2.0",
        "pkg": "5.4.1"
    },
    "pkg": {
        "scripts": [
            "workers/**/*.js"
        ],
        "assets": [
            "static/**/*",
            "views/**/*",
            "lib/lua/**/*",
            "node_modules/bull/lib/commands/**/*",
            "node_modules/swagger-ui-dist/**/*",
            "licenses.txt",
            "LICENSE.txt"
        ],
        "_targets": [
            "node16-macos-x64"
        ],
        "outputPath": "dist"
    }
}
