{
    "name": "emailengine-app",
    "version": "2.54.0",
    "private": true,
    "productTitle": "EmailEngine",
    "description": "Email Sync Engine",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "EE_OPENAPI_VERBOSE=true EENGINE_LOG_RAW=true node --tls-keylog=keylog.txt server --dbs.redis='redis://127.0.0.1:6379/9' --api.port=7003 --api.host=0.0.0.0 | tee $HOME/ee.log.dev.txt  | pino-pretty",
        "single": "EE_OPENAPI_VERBOSE=true EENGINE_LOG_RAW=true EENGINE_SECRET=your-encryption-key EENGINE_WORKERS=1 node --inspect server --dbs.redis='redis://127.0.0.1:9999/10' --api.port=7003 --api.host=0.0.0.0 | tee $HOME/ee.log.single.txt | pino-pretty",
        "gmail": "EE_OPENAPI_VERBOSE=true EENGINE_LOG_RAW=true EENGINE_SECRET=your-encryption-key EENGINE_WORKERS=2 EENGINE_CORS_ORIGIN='*' node --inspect server --dbs.redis='redis://127.0.0.1:6379/11' --api.port=7003 --api.host=0.0.0.0 | tee $HOME/ee.log.gmail.txt | pino-pretty",
        "test": "NODE_ENV=test grunt",
        "swagger": "./getswagger.sh",
        "build-source": "rm -rf node_modules && npm install && rm -rf node_modules && npm ci --omit=dev && ./update-info.sh",
        "build-dist": "pkg --compress Brotli package.json && npm install && node winconf.js",
        "build-dist-fast": "pkg --debug package.json && npm install && node winconf.js",
        "licenses": "license-checker --excludePackages 'emailengine-app' --json | node list-generate.js > static/licenses.html",
        "gettext": "find ./views -name \"*.hbs\" -print0 | xargs -0 xgettext-template -L Handlebars -o translations/messages.pot --force-po && jsxgettext lib/routes-ui.js workers/api.js lib/tools.js lib/autodetect-imap-settings.js -j -o translations/messages.pot",
        "prepare-docker": "echo \"EE_DOCKER_LEGACY=$EE_DOCKER_LEGACY\" >> system.env && cat system.env",
        "update": "rm -rf node_modules package-lock.json && ncu -u && npm install && ./copy-static-files.sh && npm run licenses && npm run gettext",
        "test-gmail-api": "node lib/email-client/gmail-client.js --dbs.redis=redis://127.0.0.1/11"
    },
    "keywords": [
        "IMAP",
        "SMTP",
        "MIME"
    ],
    "author": "Postal Systems OU",
    "license": "LICENSE_EMAILENGINE",
    "bin": {
        "emailengine": "bin/emailengine.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/postalsys/emailengine.git"
    },
    "bugs": {
        "url": "https://github.com/postalsys/emailengine/issues"
    },
    "homepage": "https://emailengine.app/",
    "dependencies": {
        "@bugsnag/js": "8.4.0",
        "@bull-board/api": "6.12.0",
        "@bull-board/hapi": "6.12.0",
        "@elastic/elasticsearch": "8.15.3",
        "@hapi/accept": "6.0.3",
        "@hapi/bell": "13.1.0",
        "@hapi/boom": "10.0.1",
        "@hapi/cookie": "12.0.1",
        "@hapi/crumb": "9.0.1",
        "@hapi/hapi": "21.4.0",
        "@hapi/inert": "7.1.0",
        "@hapi/vision": "7.0.3",
        "@phc/pbkdf2": "1.1.14",
        "@postalsys/certs": "1.0.11",
        "@postalsys/ee-client": "1.0.1",
        "@postalsys/email-ai-tools": "1.8.16",
        "@postalsys/email-text-tools": "2.1.16",
        "@postalsys/gettext": "4.1.0",
        "@postalsys/joi-messages": "1.0.5",
        "@postalsys/templates": "2.0.0",
        "ace-builds": "1.43.2",
        "base32.js": "0.1.0",
        "bullmq": "5.56.9",
        "compare-versions": "6.1.1",
        "dotenv": "17.2.1",
        "encoding-japanese": "2.2.0",
        "exponential-backoff": "3.1.2",
        "gettext-parser": "7.0.1",
        "handlebars": "4.7.8",
        "hapi-auth-bearer-token": "8.0.0",
        "hapi-pino": "12.1.0",
        "hapi-swagger": "17.3.2",
        "he": "1.2.0",
        "html-to-text": "9.0.5",
        "ical.js": "1.5.0",
        "iconv-lite": "0.6.3",
        "imapflow": "1.0.193",
        "ioredfour": "1.3.0-ioredis-07",
        "ioredis": "5.7.0",
        "ipaddr.js": "2.2.0",
        "joi": "17.13.3",
        "jquery": "3.7.1",
        "libbase64": "1.3.0",
        "libmime": "5.3.7",
        "libqp": "2.1.1",
        "license-checker": "25.0.1",
        "mailparser": "3.7.4",
        "mailsplit": "5.4.6",
        "marked": "9.1.6",
        "minimist": "1.2.8",
        "msgpack5": "6.0.2",
        "murmurhash": "2.0.1",
        "nanoid": "3.3.8",
        "nodemailer": "7.0.5",
        "pino": "9.7.0",
        "popper.js": "1.16.1",
        "prom-client": "15.1.3",
        "psl": "1.15.0",
        "pubface": "1.0.13",
        "punycode.js": "2.3.1",
        "qrcode": "1.5.4",
        "smtp-server": "3.14.0",
        "socks": "2.8.6",
        "speakeasy": "2.0.0",
        "startbootstrap-sb-admin-2": "3.3.7",
        "timezones-list": "3.1.0",
        "undici": "7.13.0",
        "wild-config": "1.7.1",
        "xml2js": "0.6.2"
    },
    "devDependencies": {
        "chai": "4.3.10",
        "eerawlog": "1.5.1",
        "eslint": "8.57.0",
        "eslint-config-nodemailer": "1.2.0",
        "eslint-config-prettier": "10.1.8",
        "grunt": "1.6.1",
        "grunt-cli": "1.5.0",
        "grunt-eslint": "24.3.0",
        "grunt-shell-spawn": "0.5.0",
        "grunt-wait": "0.3.0",
        "jsxgettext": "0.11.0",
        "pino-pretty": "13.0.0",
        "resedit": "2.0.3",
        "spdx-satisfies": "6.0.0",
        "supertest": "7.1.4",
        "xgettext-template": "5.0.0"
    },
    "engines": {
        "node": ">=18.x"
    },
    "pkg": {
        "scripts": [
            "workers/**/*.js"
        ],
        "assets": [
            "static/**/*",
            "views/**/*",
            "lib/lua/**/*",
            "node_modules/bull/lib/commands/**/*",
            "node_modules/swagger-ui-dist/**/*",
            "translations/**/*",
            "node_modules/@postalsys/joi-messages/translations/*",
            "LICENSE_EMAILENGINE.txt",
            "help.txt",
            "version-info.json",
            "sbom.json"
        ],
        "targets": [
            "node20-linux-x64",
            "node20-macos-x64",
            "node20-macos-arm64",
            "node20-win-x64"
        ],
        "outputPath": "ee-dist",
        "options": {
            "max_old_space_size": "4096"
        }
    }
}
